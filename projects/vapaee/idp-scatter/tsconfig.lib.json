{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "skipTemplateCodegen": true,
    "strict": true,
    "fullTemplateTypeCheck": true,
    "enableResourceInlining": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}

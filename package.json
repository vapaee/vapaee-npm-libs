{
    "name": "vapaee-npm-libs",
    "version": "v1.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve --poll=2000 -o",
        "serve": "ng serve --poll=2000 -o",
        "libs": "npm run lib-feedback && npm run lib-style && npm run lib-scatter && npm run lib-rex && npm run lib-dex",
        "lib-rex": "ng build @vapaee/rex --prod",
        "lib-dex": "ng build @vapaee/dex --prod",
        "lib-style": "ng build @vapaee/style --prod",
        "lib-scatter": "ng build @vapaee/scatter --prod",
        "lib-feedback": "ng build @vapaee/feedback --prod",
        "publish-libs": "npm run publish-lib-feedback && npm run publish-lib-style && npm run publish-lib-scatter && npm run publish-lib-rex && npm run publish-lib-dex",
        "publish-lib-rex": "cd dist/vapaee/rex && npm publish --access public",
        "publish-lib-dex": "cd dist/vapaee/dex && npm publish --access public",
        "publish-lib-style": "cd dist/vapaee/style && npm publish --access public",
        "publish-lib-scatter": "cd dist/vapaee/scatter && npm publish --access public",
        "publish-lib-feedback": "cd dist/vapaee/feedback && npm publish --access public",
        "buildprod": "ng build --aot --buildOptimizer --prod",
        "build": "ng build",
        "deploy": "npm run libs && npm run deploynow",
        "prepare-website": "if [ ! -d './vapaee.io' ]; then git clone https://github.com/vapaee/vapaee.io-website.git ./vapaee.io; fi; cd ./vapaee.io && git pull && cd ..;",
        "deploynow": "npm run prepare-website; npm run buildprod && npm run cpbasic && npm run copycert && cd ./vapaee.io/www && npm run save && amazon_server_console",
        "cpbasic": "cp .htaccess ./vapaee.io/www/.htaccess",
        "copycert": "cp cert/* ./vapaee.io/www/",
        "postinstall": "ngcc",
        "full": "npm i; npm run libs; cd contracts/_examples; if [ ! -d 'eosio.contracts' ]; then git clone https://github.com/Telos-Foundation/eosio.contracts; fi; npm run serve",
        "save": "git add -A && git commit -m 'save'",
        "pull": "git pull; cp ../airdrop-on-telos/* ./airdrop-on-telos/ -R;",
        "prod": "git checkout prod && git merge master -m 'merge master' && npm run buildprod && git add -A && git commit -m 'update' && git push && amazon_server_console;"
    },
    "private": true,
    "dependencies": {
        "@angular/common": "^11.0.5",
        "@angular/compiler": "^11.0.5",
        "@angular/core": "^11.0.5",
        "@scatterjs/core": "^2.7.54",
        "@scatterjs/eosjs2": "^1.5.36",
        "bignumber.js": "^9.0.1",
        "bootstrap": "^4.5.3",
        "core-js": "^3.8.1",
        "eosjs": "^21.0.3",
        "long": "^4.0.0",
        "ngx-cookie-service": "^11.0.2",
        "rxjs": "^6.6.3",
        "rxjs-compat": "^6.6.3",
        "zone.js": "^0.11.3"
    },
    "devDependencies": {
        "@angular/compiler-cli": "11.0.5",
        "@angular/cli": "11.0.5",
        "@angular/language-service": "11.0.5",
        "@angular-devkit/build-ng-packagr": "0.1002.0",
        "@angular-devkit/build-angular": "0.1100.5",
        "ng-packagr": "11.0.3",
        "tsickle": "0.39.1",
        "tslib": "2.0.3",
        "typescript": "4.0.1-rc",
        "@babel/runtime": "7.12.5",
        "@types/jasmine": "3.6.2",
        "@types/jasminewd2": "2.0.8",
        "@types/node": "14.14.16",
        "codelyzer": "6.0.1",
        "jasmine-core": "3.6.0",
        "jasmine-spec-reporter": "6.0.0",
        "karma": "5.2.3",
        "karma-chrome-launcher": "3.1.0",
        "karma-coverage-istanbul-reporter": "3.0.3",
        "karma-jasmine": "4.0.1",
        "karma-jasmine-html-reporter": "1.5.4",
        "protractor": "7.0.0",
        "ts-node": "9.1.1",
        "tslint": "6.1.3"
    }
}
